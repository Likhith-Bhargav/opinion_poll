# Flask Configuration
FLASK_ENV=production

# Database Configuration (Render will provide this)
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Secret Key (generate a secure random string for production)
JWT_SECRET_KEY=your-super-secret-jwt-key-here

# CORS Origins (for production, replace with your Vercel domain)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.vercel.app

# WebSocket CORS Origins
SOCKETIO_CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.vercel.app

# Port (Render will set this automatically)
PORT=10000
